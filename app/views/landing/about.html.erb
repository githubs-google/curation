<% require 'digest' %>
<main class="about">
  <h1 class="about center-align" id="about-header">Who We Are</h1>

  <% lukas = { name: 'Lukas Nimmo', url: 'http://numbluk.com', email: 'Lukas.Nimmo@gmail.com'} %>
  <% michael = { name: 'Michael Mentele', url: 'http://getmichaelonboard.com', email: 'michaelrmentele@gmail.com' } %>
  <% names = [ lukas, michael ] %>

  <div class="row about" id="bios">
    <% names.shuffle.each_with_index do |name, i| %>
    <a class="center-align" href="<%= name[:url] %>">
      <div class="col s6 m4 l3 bio <%= 'offset-m2 offset-l3' if i == 0 %>">
        <div class="col s12">
          <% email = name[:email].downcase %>
          <% sha = Digest::MD5.hexdigest(email) %>
          <img class="circle responsive-img" src="https://www.gravatar.com/avatar/<%= sha %>?s=800">
        </div>
        <h2><%= name[:name] %></h2>
      </a>
    </div>
    <% end %>

    <!-- <div class="col s12 center-align">
      <p id="made-with-description">Made with <%= fa_icon 'heart' %> at <a href="https://launchschool.com">LaunchSchool</a></p>
    </div> -->
  </div>
  <%= render 'shared/footer' %>
</div>
