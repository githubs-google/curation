<%= form_tag(ruby_gems_search_path, method: "get") do %>
  <%= label_tag(:search, "Search for Gem:") %>
  <%= text_field_tag(:search) %>
  <%= submit_tag("Search") %>
<% end %>

<ul>
  <% if @search_results %>
    <% @search_results.each do |result| %>
      <li>
        <h3><%= result[:name].html_safe %></h3>
        <p><%= result[:description].html_safe %></p>
      </li>
    <% end %>
  <% elsif @gems %>
    <% @gems.each_with_index do |gem, idx| %>
      <li>
        <span><%= idx + 1 %></span>
        <h3><%= gem.name %></h3>
      </li>
    <% end %>
  <% end %>
</ul>
